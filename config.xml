<?xml version='1.0' encoding='utf-8'?>
<widget id="com.directoriopty.infravision" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DirectorioPTY</name>
    <description>
        Aplicacion para tener todos los numeros de servicios de panama a la palma de su mano.
    </description>
    <author email="fernandoquero@gmail.com" href="http://www.dvrinfravision.com">
        Infravision Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <preference name="SplashScreen" value="screen" />
<preference name="SplashScreenDelay" value="10000" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
